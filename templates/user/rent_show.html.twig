{% extends 'homebase.html.twig' %}
{% block title %}{% endblock %}
{% block keywords%}{% endblock %}
{% block description%}{% endblock %}
{% block body %}
	<!-- Start Bradcaump area -->
	<div class="ht__bradcaump__area" style="background-image: url({{asset('assets/images/02.jpg')}}); background-position: center; background-size: cover;">
		<div class="container">
			<div class="row">
				<div class="col-lg-12">
					<div class="bradcaump__inner text-center">
						<h2>User Panel</h2>
						<nav class="bradcaump-content">
							<a href="/">Anasayfa</a>
							<span>/</span>
							<span class="breadcrumb_item active">User Panel</span>
						</nav>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- End Bradcaump area -->
	{% include ('user/usermenu.html.twig') %}


	<table class="table">

		<tbody>
			{% for rent in rents %}

				<tr>
					<th>Kiralayan Kisi</th>
					<td>
						<a href="{{ path('admin_user_show', {'id': rent.userid}) }}">
							{{ rent.uname }}</a>
					</td>
				</tr>
				<tr>
					<th>Kiralanan Araba</th>

					<td>
						<a href="{{ path('car_show', {'id':rent.carid}) }}">
							{{ rent.cname }}</a>
					</td>
				</tr>

				<tr>
					<th>Name</th>
					<td>{{ rent.name }}</td>
				</tr>

				<tr>
					<th>Surname</th>
					<td>{{ rent.surname }}</td>

				</tr>
				<tr>
					<th>Email</th>
					<td>{{ rent.email }}</td>

				</tr>
				<tr>
					<th>Phone</th>
					<td>{{ rent.phone }}</td>

				</tr>
				<tr>
					<th>Day</th>
					<td>{{ rent.day }}</td>

				</tr>
				<tr>
					<th>Totalprice</th>
					<td>{{ rent.totalprice }}</td>

				</tr>
				<tr>
					<th>Message</th>
					<td>{{ rent.message }}</td>

				</tr>

				<tr>
					<th>Status</th>
					<td>{{ rent.status }}</td>
				</tr>
				<tr>
					<th>Rent In</th>

					<td>{{ rent.rentin | date('m/d/Y') }}</td>
				</tr>

				<tr>
					<th>Rent In</th>

					<td>{{ rent.rentout | date('m/d/Y') }}</td>

				</tr>
				<tr>
					<th>Created At</th>

					<td>{{ rent.created_at ? rent.created_at|date('Y-m-d H:i:s') }}</td>
				</tr>


			{% else %}
				<tr>
					<td colspan="19">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
</div></div></div></div></div></div></div><!-- End Shop Page -->{% endblock %}
