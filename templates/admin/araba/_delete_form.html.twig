    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ araba.id) }}">

    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
    <button class="btn btn-primary btn-block">Delete</button>
    </div>
</form>
